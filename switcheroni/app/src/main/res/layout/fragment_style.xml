<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rows"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".styles.StyleFragment">


    <Button
        android:id="@+id/btn_style_01"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:background="@drawable/image_style_picker_button"
        app:layout_constraintBottom_toTopOf="@+id/btn_style_03"
        app:layout_constraintEnd_toStartOf="@+id/btn_style_02"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_style_02"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:background="@drawable/image_style_picker_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_style_01"
        app:layout_constraintTop_toTopOf="@+id/btn_style_01" />

    <Button
        android:id="@+id/btn_style_03"
        android:layout_width="124dp"
        android:layout_height="121dp"
        android:background="@drawable/image_style_picker_button"
        app:layout_constraintBottom_toTopOf="@+id/btn_style_05"
        app:layout_constraintEnd_toStartOf="@+id/btn_style_04"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_style_01" />

    <Button
        android:id="@+id/btn_style_04"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:background="@drawable/image_style_picker_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_style_03"
        app:layout_constraintTop_toTopOf="@+id/btn_style_03" />

    <Button
        android:id="@+id/btn_style_05"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:background="@drawable/image_style_picker_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_style_06"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_style_03" />

    <Button
        android:id="@+id/btn_style_06"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:background="@drawable/image_style_picker_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_style_05"
        app:layout_constraintTop_toTopOf="@+id/btn_style_05" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Styles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>